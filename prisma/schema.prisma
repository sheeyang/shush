// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum ProcessState {
  initialized
  running
  terminated
  error
}

model ProcessData {
  id           String          @id
  label        String
  processState ProcessState
  output       ProcessOutput[]
  command      String
  args         String
  createdAt    DateTime        @default(now())
}

model ProcessOutput {
  id            String      @id @default(uuid())
  data          String
  processInfoId String
  processInfo   ProcessData @relation(fields: [processInfoId], references: [id])
  createdAt     DateTime    @default(now())

  @@index([processInfoId])
}
